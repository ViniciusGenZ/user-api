{
   "ts-node": {
      "transpileOnly": true,
      "require": [
         "tsconfig-paths/register"
      ]
   },
   "compilerOptions": {
      "lib": [
         "es2021",
         "es6"
      ],
      "target": "es2021",
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "./build",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true,
      "removeComments": false,
      "noImplicitAny": true,
      "strictNullChecks": true,
      "strictFunctionTypes": true,
      "noImplicitThis": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "noImplicitReturns": true,
      "noFallthroughCasesInSwitch": true,
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "baseUrl": "src",
      "paths": {
         "@controllers/*": [
            "controllers/*"
         ],
         "@entities/*": [
            "entities/*"
         ],
         "@errors/*": [
            "errors/*"
         ],
         "@interfaces/*": [
            "interfaces/*"
         ],
         "@middlewares/*": [
            "middlewares/*"
         ],
         "@reporsitories/*": [
            "reporsitories/*"
         ],
         "@routes/*": [
            "routes/*"
         ],
         "@services/*": [
            "services/*"
         ],
         "@utils/*": [
            "utils/*"
         ],
         "@validations/*":[
            "validations/*"
         ]
      }
   }
}